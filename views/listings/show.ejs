<% layout("/layouts/boilerplate") %>
<script>
  const mapToken="<%=process.env.MAP_TOKEN%>";
  const listing=<%-JSON.stringify(listing)%>;
</script>
  <div class="container mt-4">

    <h3 class="text-center mb-4">
      <%=listing.title %>
    </h3>

    <div class="row justify-content-center">
      <div class="col-md-6">

        <div class="card show-card mb-4 listing-card">
          <img src="<%= listing.image.url %>" class="card-img-top show-image" alt="listing_image">

          <div class="card-body">
            <p class="card-text mb-1">
              <b>
                <%= listing.title %>
              </b>
            </p>

            <p class="mb-1">
            <b>Owner:</b>  <%= listing.owner.username %>
            </p>

            <p class="mb-1">
              <%= listing.description %>
            </p>

            <p class="mb-1">
              <%= new Intl.NumberFormat('en-PK', { style: 'currency' , currency: 'PKR' }).format(listing.price) %>
            </p>

            <p class="mb-1">
              <%= listing.location %>
            </p>

            <p class="mb-0">
              <%= listing.country %>
            </p>
          </div>
        </div>

        <!-- Buttons -->
         <% if(currUser && currUser._id.equals(listing.owner._id)) { %>
        <div class="btns d-flex justify-content-between mb-4">
          <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark">
            Edit
          </a>
          <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
            <button class="btn btn-danger">
              Delete
            </button>
          </form>
        </div>
        <% } %>
      </div>
      <div class="col-12">
      <hr>
      </div>
  
      <div class="col-8 offset-3 mb-3">
        <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">
          <% if(currUser && !currUser._id.equals(listing.owner._id))  { %>
          <h1>Leave a Review</h1>
          <div class="mb-3 mt-3">
          <label class="form-label" for="rating">Rating</label>
            <fieldset class="starability-slot">
  <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
  <input type="radio" id="first-rate1" name="review[rating]" value="1" />
  <label for="first-rate1" title="Terrible">1 star</label>
  <input type="radio" id="first-rate2" name="review[rating]" value="2" />
  <label for="first-rate2" title="Not good">2 stars</label>
  <input type="radio" id="first-rate3" name="review[rating]" value="3" />
  <label for="first-rate3" title="Average">3 stars</label>
  <input type="radio" id="first-rate4" name="review[rating]" value="4" />
  <label for="first-rate4" title="Very good">4 stars</label>
  <input type="radio" id="first-rate5" name="review[rating]" value="5" />
  <label for="first-rate5" title="Amazing">5 stars</label>
</fieldset>
          </div>
          <div class="mb-3 mt-3">
           <label for="comment">Comments</label>
           <textarea
           name="review[comment]"
            class="form-control"
           id="comment"
           cols="30"
           rows="5"
          required></textarea>

            <div class="invalid-feedback">Please add some comments for Review
            </div>
          </div>
          <button class="btn btn-outline-dark">Submit</button>
        </form>
        <hr>
        <% } %>
      </div>
   <% if(listing.reviews.length > 0) { %>
 <div class="col-12"> 
  <div class="row">    
    <p><b>All Reviews</b></p>
         <% for(review of listing.reviews){%> 
        <div class="card col-5 ms-3 mb-3">
  <div class="card-body">
      <h5 class="card-title"> <b>@</b> <%= review.author.username %></h5>
      <p class="starability-result card-text" data-rating="<%=review.rating %>"></p>
       <p class="card-text"><%=review.comment %></p>
  </div>
  <form class="d-flex justify-content-center text-center" action="/listings/<%= listing._id %>/reviews/<%= review._id%>?_method=DELETE" method="POST">
    <button type="submit" class="btn btn-sm btn-dark m-4">Delete</button>
  </form>
  </div> 
     <%}%>
     </div>
     <% } %>
      </div>
       <div class="col-6 offset-3 mb-3">
      <h3>Where you'll be</h3>
      <div id="map"></div>
     </div>
    </div>

    <script src="/js/map.js"></script>