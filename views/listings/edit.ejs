<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3>Edit Your Listing</h3>

    <form action="/listings/<%= listing._id %>?_method=PUT" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">

      <!-- Title -->
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input 
          type="text" 
          id="title"
          name="listing[title]" 
          required 
          class="form-control" 
          value="<%= listing.title %>"
        >
        <div class="invalid-feedback">Please enter a valid title.</div>
      </div>

      <!-- Description -->
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea 
          id="description"
          class="form-control"
          name="listing[description]"
          required
        ><%= listing.description %></textarea>
        <div class="invalid-feedback">Description cannot be empty.</div>
      </div>
<div>
  Orginal Listing Image <br>
  <img src="<%=orlImageUrl%>">
</div>
      <!-- Image -->
      <div class="mb-3">
        <label for="image" class="form-label">Upload New Image</label>
        <input 
          type="file" 
          id="image"
          name="listing[image]" 
          class="form-control" 
          
        >
      </div>

      <!-- Price + Country -->
      <div class="row">

        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input 
            type="number" 
            id="price"
            name="listing[price]" 
            required
            class="form-control" 
            value="<%= listing.price %>"
          >
          <div class="invalid-feedback">Please enter a valid price.</div>
        </div>

        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">Country</label>
          <input 
            type="text" 
            id="country"
            name="listing[country]" 
            required
            class="form-control" 
            value="<%= listing.country %>"
          >
          <div class="invalid-feedback">Country is required.</div>
        </div>

      </div>

      <!-- Location -->
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input 
          type="text" 
          id="location"
          name="listing[location]" 
          required
          class="form-control" 
          value="<%= listing.location %>"
        >
        <div class="invalid-feedback">Please provide a valid location.</div>
      </div>

      <button class="mb-5 mt-3 btn btn-dark edit-btn" type="submit">Edit</button>
    </form>
  </div>
</div>
